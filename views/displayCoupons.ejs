    <div class="col-12">
      <button class="btn btn-info btn-block rounded-0" ng-click="couponClickEvent(coupon)">
        <span ng-if="coupon.Code == 'Applied'">
          Activate Deal
        </span>
        <span ng-if="coupon.Code != 'Applied' && showCode == false">
          Show Coupon Code
        </span>
        <span ng-if="coupon.Code != 'Applied' && showCode == true">
          {{coupon.Code}}
        </span>
      </button>
    </div>
  </div -->
</div>
