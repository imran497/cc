<view-title>{{category}} Coupons and Deals</view-title>
<meta view-head property="keywords" content="{{category}} Coupons, {{category}} Latest deals, {{category}} best offers, Save on purchases in {{category}}, {{category}} latest Offers, Grab {{category}} deals">
<meta view-head property="description" content="Grab Best offers and deals on {{category}}. Latest and Best {{category}} offers. Get extra cashback with couponcrown for purchases on {{category}}." >


<div class="col-12">
  <div class="row brand-name-section">
      <div class="col-lg-3 push-lg-9 text-lg-right text-sm-center text-md-center text-center brand-image">
      <span class="d-inline-block text-center">
        <div class="clearfix bg-warning" style="width: 180px">
          <span class="d-inline-block float-left brand-logo-copupon-by-category bg-white" ng-repeat="brandLogo in brandLogos track by $index">
            <span class="d-flex h-100 align-items-center">
              <img ng-src="/assets/images/brand_images/{{brandLogo}}" type="image/png" width="100%" alt="{{brandLogo}} Image">
            </span>
          </span>
          <!-- img src="/assets/images/brand_images/{{brandLogo}}" height="90px" width="90px" class="float-left" type="image/png" ng-repeat="brandLogo in brandLogos track by $index" -->
        </div>
        <h6>{{category}}</h6>
      </span>
    </div>
    <div class="col-lg-9 d-flex align-items-center brand-name-div">
      <h3>{{category}} Coupons and Deals</h3>
    </div>
  </div>
      <div class="row">
        <div class="col-md-2 margin-10-0 padding-5 filter-section">

          <coupon-filters coupons-displayed="couponsCategory"></coupon-filters>

        </div>
        <div class="col-lg-8 col-md-10 coupons-section">
          <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" ng-repeat="coupon in couponsCategory">

              <display-coupons coupon="coupon" show-brand="true"></display-coupons>

            </div>

            <div class="col-sm-12 text-center margin-10-0" ng-if="relatedCoupons">
              <h5>
                <span class="other-coupons-header padding-5-0">Other Coupons</span>
              </h5>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-12" ng-repeat="coupon in relatedCoupons">

              <display-coupons coupon="coupon" show-brand="true"></display-coupons>

            </div>
          </div>

        </div>
      </div>
</div>
